---
import Layout from '@layouts/Layout.astro';
import Header from '@includes/Header.astro';

import ContentSelecao from './_ContentSelecao.astro'
import ContentChart1 from './_ContentChart1.astro';
import ContentChart2 from './_ContentChart2.astro';
import ContentChart3 from './_ContentChart3.astro';

---

<style is:inline>
    .box-chart {
        width: 100%;
    }

    .title-chart{
        font-size: 1.3rem;
        text-align: center;
    }
</style>

<script is:inline src="/assets/vendor/amcharts4/core.js"></script>
<script is:inline src="/assets/vendor/amcharts4/charts.js"></script>
<script is:inline src="/assets/vendor/amcharts4/animated.js"></script>

<Layout>
    <header data-el="top-fixed" class="header-app navbar navbar-expand-xl">
        <Header />

    </header>

    <main data-el="main-app" class="main-app">
        <section class="container-fluid">
            <nav aria-label="breadcrumb" class="breadcrumb-app">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a href="/principal/"><i class="bi bi-house-fill"></i></a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">Dashboard</li>
                </ol>
            </nav>
        </section>

        <section class="container-fluid">
            <ContentSelecao />

            <div class="row">
                <div class="col-lg-12">
                    <ContentChart1 />
                </div>

                <div class="col-lg-6">
                    <ContentChart2 />
                </div>

                <div class="col-lg-6">
                    <ContentChart3 />
                </div>
            </div>

        </section>
    </main>
</Layout>
