---
interface Link {
    href: string;
    text: string;
}

const links: Link[] = [
    {
        href: '/componentes/',
        text: 'Componentes',
    },
    {
        href: '/plugins/',
        text: 'Plugins',
    },
]
---

<nav class="navbar navbar-expand-lg pd-0 border-top w-100 nav-app">
    <div class="collapse navbar-collapse offcanvas-collapse" id="navbarSideCollapse">
        <div class="container-fluid">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" aria-current="page" href="/index.html">Home</a>
                </li>

                {
                    links.map(({ href, text }) => (
                        <li class="nav-item">
                            <a class="nav-link" href={href} aria-current={href === Astro.url.pathname ? 'page' : undefined}>
                                {text}
                            </a>
                        </li>
                    ))
                }

            </ul>
        </div>
    </div>
</nav>
